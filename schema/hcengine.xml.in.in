<?xml version="1.0" encoding="UTF-8"?>
<!-- schema definition: http://live.gnome.org/GnomeArt/EngineSchema -->

<engine module_name="hcengine" long_name="High Contrast" schema_version="0.1">

  <metainfo>
    <version>@VERSION@</version>
    <website>http://www.gnome.org</website>
    <author>
      <name>Bill Haneman</name>
      <email>bill.haneman@sun.com</email>
    </author>
  </metainfo>

  <option name="edge_thickness" type="integer" default="2">
    <minimum>1</minimum>
    <maximum>10</maximum>
    <_long_name>Edge Thickness</_long_name>
    <preferred_widget>spinbutton</preferred_widget>
  </option>

  <option name="cell_indicator_size" type="integer" default="12">
    <minimum>2</minimum>
    <maximum>50</maximum>
    <_long_name>Cell Indicator Size</_long_name>
    <_description>Size of check- and radiobuttons inside treeviews. (Bug #351764)</_description>
    <preferred_widget>spinbutton</preferred_widget>
  </option>
  
</engine>
