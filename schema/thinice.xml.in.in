  <option name="rect_scrollbar" type="enumeration" default="FALSE">
    <_long_name>Scrollbar Type</_long_name>
    <enumeration value="TRUE">
      <_label>Rectangle</_label>
    </enumeration>
    <enumeration value="FALSE">
      <_label>Shaped</_label>
    </enumeration>
  </option>

  <option name="scrollbar_marks" type="boolean" default="TRUE">
    <_long_name>Scrollbar Marks</_long_name>
  </option>
  
  <option name="scroll_button_marks" type="boolean" default="TRUE">
    <_long_name>Scrollbutton Marks</_long_name>
  </option>

  <option name="handlebox_marks" type="boolean" default="TRUE">
    <_long_name>Handlebox Marks</_long_name>
  </option>
  
  <option name="mark_type1" type="enumeration" default="NOTHING">
    <_long_name>Mark Type 1</_long_name>
    <_description>Mark Type for Scrollbar Handles, Handleboxes, etc</_description>
    <enumeration value="NOTHING">
      <_label>Nothing</_label>
    </enumeration>
    <enumeration value="SLASH">
      <_label>Slash</_label>
    </enumeration>
    <enumeration value="INVSLASH">
      <_label>Inverted Slash</_label>
    </enumeration>
    <enumeration value="DOT">
      <_label>Dot</_label>
    </enumeration>
    <enumeration value="INVDOT">
      <_label>Inverted Dot</_label>
    </enumeration>
    <enumeration value="ARROW">
      <_label>Arrow</_label>
    </enumeration>
  </option>

  <option name="mark_type2" type="enumeration" default="INVSLASH">
    <_long_name>Mark Type 1</_long_name>
    <_description>Mark Type for Scrollbar Buttons</_description>
    <enumeration value="NOTHING">
      <_label>Nothing</_label>
    </enumeration>
    <enumeration value="SLASH">
      <_label>Slash</_label>
    </enumeration>
    <enumeration value="INVSLASH">
      <_label>Inverted Slash</_label>
    </enumeration>
    <enumeration value="DOT">
      <_label>Dot</_label>
    </enumeration>
    <enumeration value="INVDOT">
      <_label>Inverted Dot</_label>
    </enumeration>
    <enumeration value="ARROW">
      <_label>Arrow</_label>
    </enumeration>
  </option>

  <option name="paned_dots" type="enumeration" default="FULL">
    <_long_name>Paned Dots</_long_name>
    <enumeration value="FULL">
      <_label>Full</_label>
    </enumeration>
    <enumeration value="SOME">
      <_label>Some</_label>
    </enumeration>
    <enumeration value="NONE">
      <_label>None</_label>
    </enumeration>
  </option>

</engine>
