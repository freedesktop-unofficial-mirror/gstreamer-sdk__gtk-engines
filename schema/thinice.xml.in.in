<engine module_name="thinice" long_name="ThinIce" schema_version="0.1">

  <metainfo>
    <version>@VERSION@</version>
    <website>http://www.gnome.org</website>
    <author>
      <name>Tim Gerla</name>
      <email>timg@rrv.net</email>
    </author>
    <author>
      <name>Tomas Ã–gren</name>
      <email>stric@ing.umu.se</email>
